import java.util.Scanner;
import java.util.Scanner;
public class practice {
    public static void main(String[] args) {
      
        System.out.println("Guess the password: "); //asks user for password
        String password = "harry potter69";
        Scanner scanner = new Scanner (System.in); //in Java, we take input from user with the help of Scanner class.
        String guess = scanner.nextLine();

        while(!guess.equals(password)) { while the guess is not equal to password, do the following
            //code
            System.out.println("Guess the password again: ");
            guess = scanner.nextLine();
        }
        //else
        System.out.println("Congratulations!"); 
        }
    }

