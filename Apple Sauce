package projects;

public class apple_sauce {
    public static void main(String[] args) {
        for (int i = 1; i <= 100; i++) { //initialize i to 1, as long as i is less or equal to 100, it will increment by 1
            if (i % 3 == 0 && i % 5 == 0) { //to check if i is divisible by 3 and 5
                //put this condition first so compiler can read this first
                System.out.print("Apple Sauce\n");
            }
            else if (i % 3 == 0) { //to check if i is divisible by 3
                System.out.print("Apple\n"); //added \n for values to print vertically
            }
           else if (i % 5 == 0) { //to check if i is divisible by 5
                System.out.print("Sauce\n");
            }

            else
            {
                System.out.print(i + "\n"); //print the numbers if they do not meet any of the if conditions
            }


        }
    }
}
